# =================================
# Course Management System Configuration
# =================================

# Node Environment
NODE_ENV=development
PORT=8000
HOST=0.0.0.0

# =================================
# Database Configuration (MySQL)
# =================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=course_management
DB_USER=root
DB_PASSWORD=your_mysql_password

# Database Connection Pool
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# =================================
# Redis Configuration
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Redis Connection Options
REDIS_RETRY_DELAY_MS=1000
REDIS_MAX_RETRIES=10

# =================================
# JWT Authentication
# =================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_ISSUER=course-management-system

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# =================================
# API Configuration
# =================================
API_BASE_URL=http://localhost:8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Request size limits
REQUEST_SIZE_LIMIT=10mb
UPLOAD_SIZE_LIMIT=50mb

# =================================
# Logging Configuration
# =================================
LOG_LEVEL=info
LOG_DIR=logs

# Log file settings
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# =================================
# Email Configuration (Optional)
# =================================
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Email defaults
FROM_EMAIL=noreply@coursemanagement.com
FROM_NAME=Course Management System

# =================================
# Notification Configuration
# =================================
# Notification worker settings
NOTIFICATION_WORKER_INTERVAL=5000
OVERDUE_CHECK_INTERVAL=3600000

# Deadline settings (in hours)
ACTIVITY_LOG_DEADLINE_HOURS=168
REMINDER_BEFORE_DEADLINE_HOURS=24

# =================================
# Application Settings
# =================================
# Pagination defaults
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# File upload settings
UPLOAD_DIRECTORY=uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# Session settings
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=86400000

# =================================
# Feature Flags
# =================================
ENABLE_SWAGGER_UI=true
ENABLE_REQUEST_LOGGING=true
ENABLE_CORS=true
ENABLE_HELMET_SECURITY=true

# Development features
ENABLE_HOT_RELOAD=false
ENABLE_DEBUG_LOGGING=false

# =================================
# External Services (Optional)
# =================================
# File storage (AWS S3, Google Cloud, etc.)
STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=course-management-files

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_id

# =================================
# Backup and Maintenance
# =================================
# Database backup settings
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=backups

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# =================================
# Security Settings
# =================================
# CORS settings
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline'

# =================================
# Internationalization
# =================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es
TRANSLATION_CACHE_TTL=3600

# =================================
# Performance Settings
# =================================
# Database query timeout (milliseconds)
DB_QUERY_TIMEOUT=30000

# Redis command timeout (milliseconds)
REDIS_COMMAND_TIMEOUT=5000

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# =================================
# Development & Testing
# =================================
# Test database (separate from main DB)
TEST_DB_NAME=course_management_test
TEST_DB_HOST=localhost
TEST_DB_USER=root
TEST_DB_PASSWORD=your_test_db_password

# Development tools
ENABLE_MOCK_DATA=false
ENABLE_API_DOCS=true
API_DOCS_PATH=/api-docs

# =================================
# Deployment Settings
# =================================
# Health check settings
HEALTH_CHECK_TIMEOUT=5000
READY_CHECK_TIMEOUT=10000

# Graceful shutdown timeout
SHUTDOWN_TIMEOUT=10000

# Container settings (for Docker deployment)
CONTAINER_PORT=8000
CONTAINER_USER=node

# =================================
# Monitoring and Alerts
# =================================
# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=false
SLOW_QUERY_THRESHOLD=1000

# Error reporting
ENABLE_ERROR_REPORTING=false
ERROR_WEBHOOK_URL=your_webhook_url

# Health monitoring
HEALTH_CHECK_ENDPOINTS=database,redis,external_apis
